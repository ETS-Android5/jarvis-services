<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#ff44ff44" >
	<item android:id="@android:id/mask">
		<shape android:shape="rectangle">
			<corners android:topLeftRadius="0dp" android:topRightRadius="0dp" android:bottomRightRadius="0dp" android:bottomLeftRadius="0dp"/>
			<solid android:color="#000000" />


			<stroke android:width="6px" 
				color="#ff44ff44" />

			<gradient 
				android:startColor="#3344ff44"
				android:endColor="#3344ff44"
				android:angle="90"/>
		</shape>
	</item>
</ripple>
