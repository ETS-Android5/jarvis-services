<?xml version="1.0" encoding="utf-8"?>
<ripple
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="#775588ff" >
	<item android:id="@android:id/mask">
		<shape android:shape="rectangle">
			<corners android:topLeftRadius="25dp" android:topRightRadius="25dp" android:bottomRightRadius="25dp" android:bottomLeftRadius="25dp"/>
			<solid android:color="#000000" />
			

			<stroke android:width="2px" 
				color="#aa5588ff" />

			<gradient 
				android:startColor="#995588ff"
				android:endColor="#995588ff"
				android:angle="90"/>
		</shape>
	</item>
</ripple>
