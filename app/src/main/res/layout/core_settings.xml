<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical">

	<LinearLayout
		android:orientation="vertical"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:gravity="bottom|center_horizontal"
		android:onClick="Close"
		android:background="#00000000">

		<LinearLayout
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@drawable/dialog_dark_r"
			android:gravity="bottom"
			android:id="@+id/dialog"
			android:translationZ="3dp"
			android:elevation="7dp"
			android:layout_margin="10dp"
			android:onClick="Ignore">

			<LinearLayout
				android:orientation="vertical"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:padding="15dp">

				<ScrollView
					android:layout_width="match_parent"
					android:layout_height="match_parent">

					<LinearLayout
						android:orientation="vertical"
						android:layout_width="match_parent"
						android:layout_height="wrap_content">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="%s_description"
							android:id="@+id/desc"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="If you don't want to see the notification, you can disable this notification in android settings. The notification required for correct app's working"
							android:layout_marginTop="10dp"
							android:id="@+id/notetx"/>

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:text="Please be note that service can be started by another app again. If the service keeps stopping, you can disable it, but if you disable it, another app may keeps stopping"
							android:layout_marginTop="10dp"
							android:textColor="#B21121"/>

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:layout_marginTop="10dp"
							android:id="@+id/state"
							android:text="State:"/>

					</LinearLayout>

				</ScrollView>

			</LinearLayout>

			<LinearLayout
				android:orientation="horizontal"
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:weightSum="3">

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:padding="5dp"
					android:gravity="center">

					<Button
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:text="Cancel"
						android:gravity="center"
						android:background="@drawable/button_rpp"
						android:singleLine="true"
						android:onClick="Close"
						android:textColor="#B20021"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:padding="5dp"
					android:gravity="center">

					<Button
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:text="Force stop"
						android:gravity="center"
						android:background="@drawable/button_rpp"
						android:singleLine="true"
						android:textColor="#FF3D00"
						android:onClick="StopTask"
						android:id="@+id/cstate"/>

				</LinearLayout>

				<LinearLayout
					android:orientation="vertical"
					android:layout_width="0dp"
					android:layout_height="match_parent"
					android:layout_weight="1.0"
					android:padding="5dp"
					android:gravity="center">

					<Button
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:text="Disable"
						android:gravity="center"
						android:background="@drawable/button_rpp"
						android:singleLine="true"
						android:textColor="#FCFF00"
						android:onClick="Disable"
						android:id="@+id/estate"/>

				</LinearLayout>

			</LinearLayout>

		</LinearLayout>

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="50dp"
			android:background="@drawable/dialog_dark_r"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:orientation="horizontal"
			android:gravity="center"
			android:translationZ="5dp"
			android:elevation="10dp"
			android:layout_marginBottom="10dp">

			<Button
				android:layout_width="match_parent"
				android:layout_height="50dp"
				android:text="All services"
				android:singleLine="true"
				android:background="@drawable/rippple"
				android:onClick="AllServices"/>

		</LinearLayout>

	</LinearLayout>

</LinearLayout>

